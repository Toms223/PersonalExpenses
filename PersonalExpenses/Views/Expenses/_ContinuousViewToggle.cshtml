@using PersonalExpenses.Helpers.Expenses
@model PersonalExpenses.ViewModel.ExpensesView

<div class="view-toggle">
    <form method="get" action="/Expenses/Index" style="display:inline;">
        @await Html.WithExcludedHiddenFields(Model, "ContinuousView")
        <input type="hidden" name="ContinuousView" value="@(!Model.ContinuousView ? "true" : "false")"/>
        <label class="switch">
            <input type="checkbox" data-autosubmit @(Model.ContinuousView ? "checked" : "")>
            <span class="slider"></span>
        </label>
        <span class="glass-label">@(Model.ContinuousView ? "Continuous View" : "Fixed View")</span>
    </form>
</div>